<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - OfficeRoomie</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OfficeRoomie.styles.css" asp-append-version="true" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/iconify/2.0.0/iconify.min.js"></script>
</head>
<body>
    <section class="wrapper closed">
        <aside class="sidebar">
            <header class="sidebar__title">
                <div class="sidebar__icon">
                    <span class="iconify" data-icon="ic:outline-dashboard" data-inline="false"></span>
                </div>
                <h1>OFFICEROOMIE</h1>
            </header>
            <nav>
                <ul>
                    <li>
                        <a asp-controller="Reservas" asp-action="Index">
                            <div class="sidebar__icon">
                                <span class="iconify" data-icon="ic:outline-event-note" data-inline="false"></span>
                            </div>
                            <span class="sidebar__text">Reservas</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Salas" asp-action="Index">
                            <div class="sidebar__icon">
                                <span class="iconify" data-icon="ic:outline-room-preferences" data-inline="false"></span>
                            </div>
                            <span class="sidebar__text">Salas</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Clientes" asp-action="Index">
                            <div class="sidebar__icon">
                                <span class="iconify" data-icon="ic:outline-manage-accounts" data-inline="false"></span>
                            </div>
                            <span class="sidebar__text">Clientes</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Administradores" asp-action="Index">
                            <div class="sidebar__icon">
                                <span class="iconify" data-icon="ic:outline-admin-panel-settings" data-inline="false"></span>
                            </div>
                            <span class="sidebar__text">Administradores</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Cartoes" asp-action="Index">
                            <div class="sidebar__icon">
                                <span class="iconify" data-icon="ic:outline-account-balance-wallet" data-inline="false"></span>
                            </div>
                            <span class="sidebar__text">Pagamentos</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <footer class="sidebar__footer">
                <div class="sidebar__icon">
                    <span class="iconify" data-icon="ic:outline-account-circle" data-inline="false"></span>
                </div>
                <span class="sidebar__text">
                    @User.Identity!.Name
                </span>
            </footer>
        </aside>
        <main class="main">
            <navbar class="navbar">
                <div>
                    <button class="sidebar-toggle">
                        <span class="iconify" data-icon="ic:outline-menu" data-inline="false"></span>
                    </button>
                </div>
                <div>
                    <a class="navbar__logout" href="/authentication/logout" title="Logout">
                        <span>Sair</span>
                        <span class="iconify" data-icon="ic:baseline-login" data-inline="false"></span>
                    </a>
                </div>
            </navbar>
            <section class="content">
                <header class="content__header">
                    Officeroomie | @ViewData["Title"]
                </header>
                <section class="content__content">
                    @RenderBody()
                </section>
                <footer class="content__footer">
                    <p>OFFICEROOMIE &copy; Direitos autorais reservados</p>
                </footer>
            </section>
        </main>
    </section>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const toggleSidebarButton = document.querySelector('.sidebar-toggle');
            const layoutWrapper = document.querySelector('.wrapper');

            if (layoutWrapper) {
                const isSidebarClosed = localStorage.getItem('sidebarClosed') === 'true';

                if (isSidebarClosed) {
                    layoutWrapper.classList.add('closed');
                } else { 
                    layoutWrapper.classList.remove("closed");
                }
            }

            if (toggleSidebarButton && layoutWrapper) {
                toggleSidebarButton.addEventListener('click', event => {
                    event.preventDefault();

                    const isClosed = layoutWrapper.classList.toggle('closed');
                    localStorage.setItem('sidebarClosed', isClosed);
                });
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
