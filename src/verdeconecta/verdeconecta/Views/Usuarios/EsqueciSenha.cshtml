@model verdeconecta.Models.Usuario

@{
    ViewData["Title"] = "Esqueci Minha Senha";
}

<h1>Esqueci Minha Senha</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EsqueciSenha" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Campo de Email -->
            <div class="form-group">
                <label asp-for="Email" class="control-label">Digite seu e-mail</label>
                <input asp-for="Email" class="form-control" placeholder="Seu e-mail cadastrado" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Enviar Link de Redefinição" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Login">Voltar para Login</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
