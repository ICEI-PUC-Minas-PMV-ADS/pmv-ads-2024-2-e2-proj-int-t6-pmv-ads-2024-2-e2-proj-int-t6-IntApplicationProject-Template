
@model verdeconecta.Models.DicasNutricionais
@{
    ViewData["Title"] = "Detalhes da Dica";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Dicas Nutricionais</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Titulo</dd>

        <dt class="col-sm-2">Dica</dt>
        <dd class="col-sm-10">@Model.Dica</dd>

        <dt class="col-sm-2">Data da Dica</dt>
        <dd class="col-sm-10">@Model.DataDica.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
</div>
