@model IEnumerable<verdeconecta.Models.DicasNutricionais>

@{
    ViewData["Title"] = "Dicas Nutricionais";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar Nova Dica</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Título</th>
            <th>Data da Dica</th>
            <th>Likes</th>
            <th>Dislikes</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dica in Model)
        {
            <tr>
                <td>@dica.Id</td>
                <td>@dica.Titulo</td>
                <td>@dica.DataDica.ToString("dd/MM/yyyy")</td>
                <td>@dica.Likes</td>
                <td>@dica.Dislikes</td>
                <td>
                    <!-- Botões de Like e Dislike -->
                    <form asp-action="Like" asp-route-id="@dica.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-success">👍 (@dica.Likes)</button>
                    </form>
                    <form asp-action="Dislike" asp-route-id="@dica.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">👎 (@dica.Dislikes)</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
