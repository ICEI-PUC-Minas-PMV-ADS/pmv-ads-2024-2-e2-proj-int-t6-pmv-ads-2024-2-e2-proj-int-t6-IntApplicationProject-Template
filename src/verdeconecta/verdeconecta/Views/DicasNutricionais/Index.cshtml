@model IEnumerable<verdeconecta.Models.DicasNutricionais>

@{
    ViewData["Title"] = "Dicas Nutricionais";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar Nova Dica</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Título</th>
            <th>Data da Dica</th>
            <th>Ações</th>
            <th>Detalhes</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var dica in Model)
        {
            <tr>
                <td>@dica.Id</td>
                <td>@dica.Titulo</td>
                <td>@dica.DataDica.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@dica.Id" class="btn btn-info">Ver Detalhes</a>
                </td>

            </tr>
        }
    </tbody>
</table>
