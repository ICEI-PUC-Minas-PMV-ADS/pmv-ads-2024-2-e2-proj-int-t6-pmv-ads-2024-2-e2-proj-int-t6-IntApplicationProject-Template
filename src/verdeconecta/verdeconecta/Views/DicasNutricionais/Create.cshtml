@model verdeconecta.Models.DicasNutricionais

@{
    ViewData["Title"] = "Adicionar Nova Dica";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #e8f5e9;
            font-family: 'Roboto', sans-serif;
        }

        .container {
            max-width: 700px;
            margin-top: 50px;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 25px 35px;
        }

        h2 {
            color: #2e7d32;
            font-size: 32px;
            text-align: center;
            margin-bottom: 20px;
        }

        h4 {
            color: #43a047;
            text-align: center;
            font-size: 22px;
            margin-bottom: 25px;
        }

        label {
            color: #495057;
            font-size: 18px;
        }

        .form-control {
            border: 2px solid #ced4da;
            border-radius: 10px;
            font-size: 16px;
            padding: 12px;
        }

        .form-control:focus {
            border-color: #2e7d32;
            box-shadow: 0 0 0 0.25rem rgba(46, 125, 50, 0.25);
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            transition: background-color 0.3s, border-color 0.3s;
            font-size: 18px;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

        .btn-outline-secondary {
            border-color: #6c757d;
            color: #6c757d;
            transition: color 0.3s, border-color 0.3s;
            font-size: 18px;
        }

        .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: #ffffff;
        }

        .text-danger {
            color: #e74c3c;
            font-size: 14px;
        }

        footer {
            text-align: center;
            margin-top: 20px;
        }

        footer a {
            color: #2e7d32;
            text-decoration: none;
            font-weight: bold;
        }

        footer a:hover {
            text-decoration: underline;
        }

        hr {
            margin-top: 30px;
            margin-bottom: 30px;
            border: 0;
            border-top: 1px solid #dee2e6;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>@ViewData["Title"]</h2>
        <h4>Dicas Nutricionais</h4>
        <hr />
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="Titulo" class="form-label">Título da Dica</label>
                <input asp-for="Titulo" class="form-control shadow-sm" placeholder="Digite o título da dica" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Dica" class="form-label">Descrição</label>
                <textarea asp-for="Dica" class="form-control shadow-sm" rows="4" placeholder="Digite a descrição da dica"></textarea>
                <span asp-validation-for="Dica" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DataDica" class="form-label">Data da Dica</label>
                <input asp-for="DataDica" class="form-control shadow-sm" type="date" />
                <span asp-validation-for="DataDica" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success shadow-sm">Salvar</button>
                <a asp-action="Index" class="btn btn-danger shadow-sm">Cancelar</a>
            </div>
        </form>
        <footer class="mt-4">
            <a asp-action="Index">&larr; Voltar à Lista</a>
        </footer>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
