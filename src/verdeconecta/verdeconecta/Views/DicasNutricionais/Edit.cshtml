@model verdeconecta.Models.DicasNutricionais
@{
    ViewData["Title"] = "Editar Dica Nutricional";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #e8f5e9;
            font-family: 'Roboto', sans-serif;
        }

        .container {
            max-width: 700px;
            margin-top: 50px;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 25px 35px;
        }

        h2 {
            color: #2e7d32;
            font-size: 32px;
            text-align: center;
            margin-bottom: 20px;
        }

        hr {
            margin-top: 20px;
            margin-bottom: 20px;
            border: 0;
            border-top: 1px solid #c8e6c9;
        }

        .form-label {
            font-weight: 500;
            color: #388e3c;
        }

        .form-control {
            border-radius: 10px;
            padding: 12px;
            font-size: 16px;
            border: 1px solid #ced4da;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

            .form-control:focus {
                border-color: #2e7d32;
                box-shadow: 0 0 0 0.25rem rgba(46, 125, 50, 0.25);
            }

        .btn-success {
            background-color: #4caf50;
            border-color: #4caf50;
            font-size: 18px;
            font-weight: 600;
            transition: background-color 0.3s, border-color 0.3s;
        }

            .btn-success:hover {
                background-color: #388e3c;
                border-color: #388e3c;
            }

        .btn-outline-danger {
            border-color: #f44336;
            color: #f44336;
            font-size: 18px;
            font-weight: 600;
            transition: color 0.3s, border-color 0.3s, background-color 0.3s;
        }

            .btn-outline-danger:hover {
                background-color: #f44336;
                color: #ffffff;
            }

        .btn i {
            margin-right: 0.5rem;
        }

        .btn:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .text-center {
            text-align: center;
        }

        .text-muted {
            font-size: 0.9rem;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">@ViewData["Title"]</h2>
        <hr />

        <form asp-action="Edit" method="post">
            <!-- Título -->
            <div class="mb-4">
                <label asp-for="Titulo" class="form-label">Título</label>
                <input asp-for="Titulo" class="form-control shadow-sm border-0" required />
            </div>

            <!-- Descrição -->
            <div class="mb-4">
                <label asp-for="Dica" class="form-label">Descrição</label>
                <textarea asp-for="Dica" class="form-control shadow-sm border-0" rows="4" required></textarea>
            </div>

            <!-- Data -->
            <div class="mb-4">
                <label asp-for="DataDica" class="form-label">Data da Dica</label>
                <input asp-for="DataDica" class="form-control shadow-sm border-0" type="date" required />
            </div>

            <!-- Botões -->
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success rounded-3 shadow-sm px-4 py-2">
                    <i class="bi bi-save"></i> Salvar Alterações
                </button>
                <a asp-action="Index" class="btn btn-outline-danger rounded-3 shadow-sm px-4 py-2">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </div>
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
