@model IEnumerable<verdeconecta.Models.Questionario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipoDieta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TemRestricaoAlimentar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RestricaoDetalhes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NivelAtividadeFisica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ObjetivoPrincipal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RefeicoesPorDia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HorarioRefeicoes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConsumoFrutasVegetais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipoDieta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TemRestricaoAlimentar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RestricaoDetalhes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NivelAtividadeFisica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ObjetivoPrincipal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefeicoesPorDia)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.ConsumoFrutasVegetais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
