@model verdeconecta.Models.DicasNutricionais

@{
    ViewData["Title"] = "Detalhes da Dica";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #e8f5e9;
            font-family: 'Roboto', sans-serif;
        }

        .container {
            max-width: 700px;
            margin-top: 50px;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 25px 35px;
        }

        h2 {
            color: #2e7d32;
            font-size: 32px;
            text-align: center;
            margin-bottom: 20px;
        }

        h4 {
            color: #43a047;
            text-align: center;
            font-size: 22px;
            margin-bottom: 25px;
        }

        dt {
            color: #388e3c;
            font-weight: bold;
        }

        dd {
            color: #1b5e20;
        }

        a.btn-secondary {
            background-color: #66bb6a;
            border-color: #66bb6a;
            color: white;
            transition: background-color 0.3s, border-color 0.3s;
        }

            a.btn-secondary:hover {
                background-color: #43a047;
                border-color: #43a047;
            }

        hr {
            margin-top: 30px;
            margin-bottom: 30px;
            border: 0;
            border-top: 1px solid #c8e6c9;
        }

        footer {
            text-align: center;
            margin-top: 20px;
            font-size: 14px;
        }

            footer a {
                color: #388e3c;
                text-decoration: none;
                font-weight: bold;
            }

                footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2>@ViewData["Title"]</h2>

        <div class="details-container">
            <h4 class="text-center">Dicas Nutricionais</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">Título</dt>
                <dd class="col-sm-8">@Model.Titulo</dd>

                <dt class="col-sm-4">Dica</dt>
                <dd class="col-sm-8">@Model.Dica</dd>

                <dt class="col-sm-4">Data da Dica</dt>
                <dd class="col-sm-8">@Model.DataDica.ToString("dd/MM/yyyy")</dd>
            </dl>
        </div>

        <div class="text-center">
            <a asp-action="Index" class="btn btn-secondary shadow-sm">Voltar à Lista</a>
        </div>

        
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
