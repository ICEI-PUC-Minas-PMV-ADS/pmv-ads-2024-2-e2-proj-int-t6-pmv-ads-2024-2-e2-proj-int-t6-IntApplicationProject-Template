@model verdeconecta.Models.DicasNutricionais

@{
    ViewData["Title"] = "Detalhes da Dica";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            font-weight: 700;
            color: #2c3e50;
        }

        .details-container {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin: 20px auto;
            max-width: 600px;
        }

        .details-container dl dt {
            font-weight: 700;
            color: #495057;
        }

        .details-container dl dd {
            color: #6c757d;
        }

        .btn-secondary {
            margin-top: 20px;
        }

        footer {
            text-align: center;
            margin-top: 30px;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2>@ViewData["Title"]</h2>

        <div class="details-container">
            <h4 class="text-center text-primary">Dicas Nutricionais</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">Título</dt>
                <dd class="col-sm-8">@Model.Titulo</dd>

                <dt class="col-sm-4">Dica</dt>
                <dd class="col-sm-8">@Model.Dica</dd>

                <dt class="col-sm-4">Data da Dica</dt>
                <dd class="col-sm-8">@Model.DataDica.ToString("dd/MM/yyyy")</dd>
            </dl>
        </div>

        <div class="text-center">
            <a asp-action="Index" class="btn btn-secondary shadow-sm">Voltar à Lista</a>
        </div>

        <footer>
            <p>&copy; 2024 - verdeconecta</p>
        </footer>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
