
<h2>Animais Disponíveis para Adoção</h2>
<a asp-action="Create">Cadastrar Novo Animal</a>

<table>
    <thead>
        <tr>
            <th>Nome</th>
            <th>Tipo</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        {
            <tr>
                <td>Nome</td>
                <td>Tipo</td>
                <td>
                    <a asp-action="Edit" asp-route-id="Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h2>Cadastrar Novo Animal</h2>
<form asp-action="Create">
    <div>
        <label>Nome:</label>
        <input type="text" name="Nome" required />
    </div>
    <div>
        <label>Tipo:</label>
        <input type="text" name="Tipo" required />
    </div>
    <div>
        <button type="submit">Cadastrar</button>
    </div>
</form>
