@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Merriweather+Sans:400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic" rel="stylesheet">
    <!-- CSS principal -->
    <link href="~/css/styles.css" rel="stylesheet">
</head>
<body id="page-top">
    <!-- Navegação -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top py-3" id="mainNav">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" href="#page-top">
                <img src="https://petmatch.ie/wp-content/uploads/2022/05/Logo-1.png" alt="PetMatch" class="default-logo">
            </a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto my-2 my-lg-0">
                    <li class="nav-item"><a class="nav-link active" href="#about">Sobre</a></li>
                    <li class="nav-item"><a class="nav-link" href="#services">Serviços</a></li>
                    <li class="nav-item"><a class="nav-link" href="#contact">Contato</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="Index" asp-controller="Pets">Pets</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="Login" asp-controller="Conta">Login</a></li>
                    
                </ul>
            </div>
        </div>
    </nav>

    <!-- Masthead -->
    <header class="masthead">
        <div class="container px-4 px-lg-5 h-100">
            <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
                <div class="col-lg-8 align-self-end">
                    <h1 class="text-white font-weight-bold">Conecte-se com o Seu Futuro Amigo</h1>
                    <hr class="divider">
                </div>
                <div class="col-lg-8 align-self-baseline">
                    <p class="text-white-75 mb-5">Se cadastre e encontre parceiros para adoção confiáveis perto de você!</p>
                    <a class="btn btn-primary btn-xl" href="#services">Saiba Mais</a>
                </div>
            </div>
        </div>
    </header>

    <!-- Sobre -->
    <section class="page-section bg-primary" id="about">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-lg-8 text-center">
                    <h2 class="text-white mt-0">O que oferecemos</h2>
                    <hr class="divider divider-light">
                    <p class="text-white-75 mb-4">Conectamos pessoas apaixonadas por animais e que desejam adotar um amigo!</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Serviços -->
    <section class="page-section" id="services">
        <div class="container px-4 px-lg-5">
            <h2 class="text-center mt-0">Nossos Serviços</h2>
            <hr class="divider">
            <div class="row gx-4 gx-lg-5">
                <div class="col-lg-4 col-md-6 text-center">
                    <div class="mt-5">
                        <div class="mb-2"><i class=" bi bi-person-vcard fs-1 text-primary"></i></div>
                        <h3 class="h4 mb-2">Facilidade de Contato</h3>
                        <p class="text-muted mb-0">Mantenha contato com o abrigo de forma fácil</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 text-center">
                    <div class="mt-5">
                        <div class="mb-2"><i class="bi-house-door fs-1 text-primary"></i></div>
                        <h3 class="h4 mb-2">Encontre seu novo amigo</h3>
                        <p class="text-muted mb-0">Procure seu novo companheiro para adotar</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 text-center">
                    <div class="mt-5">
                        <div class="mb-2"><i class="bi-geo-alt fs-1 text-primary"></i></div>
                        <h3 class="h4 mb-2">Localização</h3>
                        <p class="text-muted mb-0">Encontre os animais mais proximos de você</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contato -->
    <section class="page-section" id="contact">
    <div class="container px-4 px-lg-5">
        <h2 class="text-center mt-0">Entre em Contato</h2>
        <hr class="divider">
        <form id="contactForm">
            <div class="form-floating mb-3">
                <input class="form-control" id="name" type="text" placeholder="Seu Nome" required>
                <label for="name">Nome</label>
            </div>
            <div class="form-floating mb-3">
                <input class="form-control" id="email" type="email" placeholder="Seu Email" required>
                <label for="email">Email</label>
            </div>
            <div class="form-floating mb-3">
                <textarea class="form-control" id="message" placeholder="Sua Mensagem" required></textarea>
                <label for="message">Mensagem</label>
            </div>
            <div class="d-grid">
                <button class="btn btn-primary btn-xl" type="submit">Enviar</button>
            </div>
        </form>
        <div id="responseMessage" class="text-center mt-3"></div>
    </div>
</section>

    <!-- Footer -->
    <footer class=" text-black text-center py-3">
        <div class="container">
            <p class="mb-0">© 2024 PetMatch. Todos os direitos reservados.</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/scripts.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
    $(document).ready(function () {
        $('#contactForm').on('submit', function (e) {
            e.preventDefault(); // Impede o recarregamento da página

            var formData = {
                name: $('#name').val(),
                email: $('#email').val(),
                message: $('#message').val()
            };

            // Requisição AJAX para enviar os dados ao backend
            $.ajax({
                url: '/api/contact/send-email', // Endpoint do backend
                method: 'POST',
                data: formData,
                success: function (response) {
                    if (response.success) {
                        $('#responseMessage').html('<p style="color: green;">' + response.message + '</p>');
                        $('#contactForm')[0].reset();
                    } else {
                        $('#responseMessage').html('<p style="color: red;">' + response.message + '</p>');
                    }
                },
                error: function (xhr) {
                    var errorMessage = xhr.responseJSON ? xhr.responseJSON.message : 'Erro ao enviar mensagem.';
                    $('#responseMessage').html('<p style="color: red;">' + errorMessage + '</p>');
                }
            });
        });
    });
    </script>
</body>
</html>
