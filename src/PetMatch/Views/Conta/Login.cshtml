@model LoginViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Navegação -->
<nav class="navbar navbar-expand-lg navbar-light fixed-top py-3" id="mainNav">
    <div class="container px-4 px-lg-5">
        <a class="navbar-brand" asp-action="Index" asp-controller="Home">
            <img src="https://petmatch.ie/wp-content/uploads/2022/05/Logo-1.png" alt="PetMatch" class="default-logo">
        </a>
    </div>
</nav>

<div class=" d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-sm" style="width: 100%; max-width: 400px;">
        <div class="card-header text-white text-center" style="background-color: #ff9800;">
            <h2>Login</h2>
        </div>
        <div class="card-body">
            <form asp-action="Login" method="post">
                <!-- Campo de Email -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Digite seu email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Campo de Senha -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Senha</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Digite sua senha" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Botão de Login -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Entrar</button>
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <p>Não tem uma conta? <a asp-action="Register" class="text-primary">Cadastre-se aqui</a>.</p>
            <a asp-action="ForgotPassword" class="text-primary">Esqueceu a senha?</a>
        </div>
    </div>
</div>
